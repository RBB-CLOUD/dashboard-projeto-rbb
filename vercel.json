{
  "version": 2,
  "buildCommand": "echo Preview deploy",
  "outputDirectory": "site",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://supabase-realtime-worker.onrender.com/api/:path*"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/site/dashboard.html"
    },
    {
      "src": "^/dashboard/?$",
      "dest": "/site/dashboard.html"
    },
    {
      "src": "^/(.*\\.(?:html|js|css|png|jpg|jpeg|gif|svg|webp|ico))$",
      "dest": "/site/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/site/$1"
    }
  ]
}
